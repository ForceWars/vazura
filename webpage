<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ESP8266 Sensor de Distancia</title>
</head>
<body>
    <h1>Sensor de Distancia</h1>
    <div id="distance"></div>

    <script>
        function fetchData() {
            fetch('/data')
            .then(response => response.json())
            .then(data => {
                document.getElementById('distance').innerText = 'Distancia: ' + data.distance + ' cm';
            });
        }

        fetchData(); // Fetch data when the page loads

        // Update data every 5 seconds
        setInterval(fetchData, 5000);
    </script>
</body>
</html>
